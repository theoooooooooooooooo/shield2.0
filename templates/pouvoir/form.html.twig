{# templates/pouvoir/form.html.twig #}
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.nom, { 'label': 'Nom du pouvoir', 'attr': { 'class': 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description, { 'label': 'Description', 'attr': { 'class': 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.level) }}
            {{ form_widget(form.level, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.level) }}
        </div>
