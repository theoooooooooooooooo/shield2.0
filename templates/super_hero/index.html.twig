{% extends 'base.html.twig' %}

{% block title %}Nos Héros{% endblock %}

{% block body %}
<div class="text-center">
    <h2 class="text-warning">Nos Héros</h2>
    <a href="{{ path('app_CreerSuperHero') }}" class="btn btn-primary">Nouveau</a>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    <div class="row mt-4"> 
        {% for superhero in superHeros %}
            <div class="col-md-4">
                <div class="card bg-dark text-white mb-3">
                    <!-- Image placeholder -->
                    <!-- <img src="" class="card-img-top" alt="Hero 1"> -->
                    <div class="card-body">
                        <h5 class="card-title">{{ superhero.nom }}</h5>
                        {% if superhero.estDisponible == 1 %}
                            <span class="badge badge-disponible">Disponible</span>
                        {% else %}
                            <span class="badge badge-non-disponible">Non Disponible</span>
                        {% endif %}
                        <!-- Button to view details -->
                        <a href="{{ path('app_showDetail', { 'id': superhero.id }) }}" class="btn btn-details mt-2">Voir les détails</a>
                    </div>
                </div>
            </div>
        {% else %}
            <h5 class="card-title">Aucun Super Hero</h5>
        {% endfor %}
    </div>
</div>
{% endblock %}
