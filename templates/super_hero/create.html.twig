{% extends 'base.html.twig' %}

{% block title %}Noveau Héro{% endblock %}

{% block body %}
<div class="container form-container">
    <div class="form-card">
        <h2>Noveau Héro</h2>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.nom, { 'label': 'Nom du super-héros', 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.alterEgo, { 'label': 'Alter Ego', 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.energieLevel) }}
                {{ form_widget(form.energieLevel, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.energieLevel) }}
            </div>
            <div class="form-group">
                {{ form_row(form.biographie, { 'label': 'Biographie', 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.estDisponible) }}
            </div>
            <div class="form-group">
                {{ form_row(form.pouvoirs, { 'label': 'Pouvoirs associés', 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.createdAt, { 'label': 'Créé le', 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Créer</button>
            </div>
        {{ form_end(form) }}
        
        <div class="mt-3">
            <a href="{{ path('app_SuperHero') }}" class="btn btn-secondary">Retour</a>
        </div>
    </div>
</div>
{% endblock %}
